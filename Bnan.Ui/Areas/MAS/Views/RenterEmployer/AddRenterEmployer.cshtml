

@using Bnan.Ui.ViewModels.MAS
@model Bnan.Ui.ViewModels.MAS.RenterEmployerVM

@inject IViewLocalizer localizer
@inject IOptions<RequestLocalizationOptions> options

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    ViewData["Page-title"] = localizer["Add RenterEmployer Data"];
    ViewData["Page-Hint"] = localizer["Add RenterEmployer Hint"];
    ViewData["returnUrl"] = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}
<style>

    .row {
        align-items: center;
    }


    #signaturePreview, #imagePreview {
        display: block;
        margin-top: -5px;
        float: right;
        margin-right: 20px;
        height: 100px;
        width: 200px;
        object-fit: cover;
        border: .5px solid rgb(231, 231, 231);
        position: relative;
    }

    #spanInput {
        height: 35px;
    }

    .sub-container form .row > div:nth-child(odd):nth-child(-n+5), .sub-container-form form .row > div:nth-child(odd):nth-child(-n+5) {
        margin: 0;
    }

    .file-upload {
        background-color: #ffffff;
        width: 200px;
        margin: 0 auto;
        padding: 20px;
    }

    .file-upload-btn1, .file-upload-btn2, .file-upload-btn3 {
        width: 200px;
        max-height: 200px;
        max-width: 200px;
        margin: 0;
        color: #fff;
        background: #727cf5;
        border: none;
        padding: 10px;
        border-radius: 4px;
        border-bottom: 4px solid #727cf5;
        transition: all .2s ease;
        outline: none;
        text-transform: uppercase;
        font-weight: 700;
    }

        .file-upload-btn1:hover, .file-upload-btn2:hover, .file-upload-btn3:hover {
            background: #5661e3;
            color: #ffffff;
            transition: all .2s ease;
            cursor: pointer;
        }

    .file-upload-content {
        display: none;
    }

    .file-upload-input-picture1, .file-upload-input-signature ,.file-upload-input-picture2, .file-upload-input-picture3{
        position: absolute;
        margin: 0;
        padding: 0;
        width: 200px;
        height: 200px;
        max-height: 200px;
        max-width: 200px;
        outline: none;
        opacity: 0;
        cursor: pointer;
    }

    .image-upload-wrap {
        max-height: 200px;
        max-width: 200px;
        margin-top: 5px;
        width: 200px;
        border: 4px dashed rgb(231, 231, 231);
        position: relative;
    }

        .image-dropping,
        .image-upload-wrap:hover {
            background-color: rgb(231, 231, 231);
            border: 4px dashed #ffffff;
        }

    .image-title-wrap {
        color: #222;
    }

    .drag-text {
        text-align: center;
    }

        .drag-text h3 {
            font-weight: 100;
            text-transform: uppercase;
            padding: 60px 0;
        }

    .file-upload-image {
        max-height: 200px;
        max-width: 200px;
        margin-top: 5px;
        margin-bottom: 5px;
        padding: 20px;
        border: .5px solid rgb(231, 231, 231);
    }

    .remove-image {
        margin: 0;
        max-height: 200px;
        max-width: 200px;
        width: 200px;
        color: #fff;
        background: #fa5c7c;
        border: none;
        padding: 10px;
        border-radius: 4px;
        border-bottom: 4px solid #fa5c7c;
        transition: all .2s ease;
        outline: none;
        text-transform: uppercase;
        font-weight: 700;
    }

        .remove-image:hover {
            background: #f35474;
            color: #ffffff;
            transition: all .2s ease;
            cursor: pointer;
        }
</style>
<title>@ViewData["Title"]</title>



<div class="sub-container-form">
    <form class="needs-validation" novalidate asp-area="MAS" asp-controller="RenterEmployer" asp-action="AddRenterEmployer" enctype="multipart/form-data">
        
        <div id="form_height" style="height:520px;">

        @* <div class="form-contain"> *@ @* For-scrolling *@
            @*RenterEmployer code*@
            <div class="row mt-2">
                <div class="col-md-2">
                    <label class="form-label" for="RenterEmployerCode">@localizer["RenterEmployerCode"]</label>
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" asp-for="CrMasSupRenterEmployerCode" id="RenterEmployercode" maxlength="100" width="80%" value="@ViewBag.RenterEmployerCode" readonly />
                </div>
            </div>

            @*RenterEmployer name arabic*@
            <div class="row mt-2">
                <div class="col-md-2">
                    <label class="form-label" for="RenterEmployerNameAr">@localizer["RenterEmployerNameAr"]</label>
                </div>
                <div class="col-md-4">
                <input type="text" class="form-control" asp-for="CrMasSupRenterEmployerArName" id="RenterEmployerNameAr" maxlength="50" width="80%" onchange="Check_onChange_input('ExistAr',document.getElementById('RenterEmployerNameAr').value)" oninput="this.value=this.value.replace(/[^\u0600-\u06FF\ufb50-\ufdff\ufe70-\ufeff\s]/g, '')" autoComplete="off" />
                @* <input type="text" class="form-control" asp-for="CrMasSupRenterEmployerArName" id="RenterEmployerNameAr" maxlength="50" width="80%" oninput="this.value=this.value.replace(/[^a-zA-Z ]/g, '')" required /> *@
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="@Model.CrMasSupRenterEmployerArName" class="text-danger"></span>
                            @Html.ValidationMessage("ExistAr", null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>


            @*RenterEmployer name English*@
            <div class="row mt-2">
                <div class="col-md-2">
                    <label class="form-label" for="RenterEmployerNameEn">@localizer["RenterEmployerNameEn"]</label>
                </div>
                <div class="col-md-4">
                <input type="text" class="form-control" asp-for="CrMasSupRenterEmployerEnName" maxlength="50" id="RenterEmployerNameEn" width="80%" onchange="Check_onChange_input('ExistEn',document.getElementById('RenterEmployerNameEn').value)" oninput="this.value = this.value.replace(/[^a-zA-Z ]/g, '')" autoComplete="off">
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="@Model.CrMasSupRenterEmployerEnName" class="text-danger"></span>
                             @Html.ValidationMessage("ExistEn", null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            @*RenterEmployer Select Sector*@
            <div class="row mt-2">
                <div class="col-md-2">
                    <label class="form-label" for="RenterEmployerReasons">@localizer["RenterEmployerSector"]</label>
                </div>
                <div class="col-md-7">
                    @if (requestCulture?.RequestCulture.UICulture.Name == "en-US")
                    {
                        <select class="text-right form-select" id="SelectedSector" onchange="Changed_Selection_Sector()" style="width:135px;">
                            @foreach (var single in Model.All_Sectors)
                            {
                                <option id="@single.CrMasSupRenterSectorCode" value="@single.CrMasSupRenterSectorCode">@single.CrMasSupRenterSectorEnName</option>
                            }
                        </select>
                    }
                    else
                    {
                        <select class="text-right form-select" id="SelectedSector" onchange="Changed_Selection_Sector()" style="width:135px;">
                            @foreach (var single in Model.All_Sectors)
                            {
                                <option id="@single.CrMasSupRenterSectorCode" value="@single.CrMasSupRenterSectorCode">@single.CrMasSupRenterSectorArName</option>
                            }
                        </select>
                    }
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="@Model.CrMasSupRenterEmployerSectorCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            @*RenterEmployer reasons*@
            <div class="row mt-2">
                <div class="col-md-2">
                    <label class="form-label" for="RenterEmployerReasons">@localizer["reasons"]</label>
                </div>
                <div class="col-md-7">
                    <input type="text" class="form-control" asp-for="CrMasSupRenterEmployerReasons" maxlength="100" id="RenterEmployerReasons" width="80%" autoComplete="off" />
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="@Model.CrMasSupRenterEmployerReasons" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            

             @Html.ValidationMessage("NoCHanged", null, new { @class = "text-danger" })
         </div> 
        @*</div>*@


        <div style="margin_top:-70px;">
            <button class="btn btn-primary" type="submit">@localizer["Save"]</button>
            <a type="button" class="btn btn-danger ms-2" title="@localizer["Back"]" asp-area="MAS" asp-controller="RenterEmployer" asp-action="Index">
                @localizer["Back"]
            </a>
        </div>

        <input type="text" id="SectorId" hidden asp-for="@Model.CrMasSupRenterEmployerSectorCode" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function validateInput(event, inId, InEr, No) {
            event.target.value = event.target.value.replace(/[^0-9]/g, '');

            const inputElement = document.getElementById(inId);
            const errorMessageElement = document.getElementById(InEr);

            const inputValue = inputElement.value;
            const isValid = inputValue.startsWith(No);

            if (!isValid) {
                errorMessageElement.textContent = errorMessageElement.getAttribute('data-val-err');
                inputElement.value = "";
            } else {
                errorMessageElement.textContent = '';
            }


        }
        


        function Check_onChange_input(Exist_lang,dataField) {
            $.ajax({
                type: "POST",
                url: "/MAS/RenterEmployer/CheckChangedField",
                data: { Exist_lang: Exist_lang, dataField: dataField },
                success: function (result) {
                    // $('.modal').modal('hide');
                    // window.location.href = "/MAS/RenterEmployer/Index";
                    console.log(result);

                },
                error: function (error) {
                    console.log(error);
                }
            });
            //alert('Changed' + dataField);
        }
    

    </script>

    <script>
        $(document).ready(function () {
            Changed_Selection_Sector();
        });

        function Changed_Selection_Sector() {
            var selected = $('#SelectedSector').val();
            $('#SectorId').val(selected);
            console.log(selected);
            // Binding in model VM by Hidden input asp-For 'Model.CrMasSupRenterEmployerSectorCode'
        }
    </script>
}