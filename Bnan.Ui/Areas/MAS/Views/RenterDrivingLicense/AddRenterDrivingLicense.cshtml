@using Bnan.Ui.ViewModels.MAS
@model RenterDrivingLicenseVM

@inject IViewLocalizer localizer

@{
    ViewData["returnUrl"] = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

<style>
    .invalid-feedback {
        display: block !important; /* Temporarily force it to be visible */
    }
</style>

<div class="col my-2 d-flex align-items-center justify-content-center">
    <div class="container NewUpdate-container">
        <form asp-area="MAS" asp-controller="RenterDrivingLicense" asp-action="AddRenterDrivingLicense" class="needs-validation" novalidate>
            <input hidden asp-for="CrMasSupRenterDrivingLicenseCode" />
            <div class="row  mt-3 g-3">
                <div class="row justify-content-center">
                    <div class="col-lg-9">
                        <div class="row g-3 my-2">
                            <div class="col">
                                <h3>@localizer["Add RenterDrivingLicense Data"]</h3>
                            </div>
                            <div class="col-md-auto save-col">
                                <button type="submit" class="custom-img-btn"> <img src="~/MasSystem/images/save.svg" /> </button>
                                <button type="button" class="custom-img-btn"> <a href="/MAS/RenterDrivingLicense/Index"><img class="Chevron" src="~/MasSystem/images/Chevron_Left.svg" /></a></button>
                            </div>
                        </div>
                        <div class="container-fluid">
                            <div class="row  mt-3 g-3 ">

                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <p class="DataTitle">@localizer["RenterDrivingLicenseCode"]</p>
                                                </div>
                                                <div class="col-auto ">
                                                    <p class="Saved-data">@Model.CrMasSupRenterDrivingLicenseCode</p>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <label for="AR-Licence" class="form-label">
                                                @localizer["RenterDrivingLicenseNameAr"]
                                                <i class="fa-solid fa-star-of-life RequirdStar"></i>
                                            </label>
                                            <input type="text" asp-for="CrMasSupRenterDrivingLicenseArName" id="RenterDrivingLicenseNameAr" maxlength="50" class="form-control inputs arabic-input" onchange="Check_onChange_input('ExistAr',document.getElementById('RenterDrivingLicenseNameAr').value)" oninput="this.value=this.value.replace(/[^\u0600-\u06FF\ufb50-\ufdff\ufe70-\ufeff\s]/g, '')" autoComplete="off" required>
                                            <div class="invaild">
                                                <div class="invalid-feedback">
                                                    <span asp-validation-for="@Model.CrMasSupRenterDrivingLicenseArName" id="RenterDrivingLicenseNameAr-Error" class="text-danger"></span>
                                                    @Html.ValidationMessage("ExistAr", null, new { @class = "text-danger" })

                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="EN-Licence" class="form-label">
                                                @localizer["RenterDrivingLicenseNameEn"]
                                                <i class="fa-solid fa-star-of-life RequirdStar"></i>
                                            </label>
                                            <input type="text" class="form-control inputs english-input" asp-for="CrMasSupRenterDrivingLicenseEnName" maxlength="50" id="RenterDrivingLicenseNameEn" onchange="Check_onChange_input('ExistEn',document.getElementById('RenterDrivingLicenseNameEn').value)" oninput="this.value = this.value.replace(/[^a-zA-Z ]/g, '')" autoComplete="off" required>
                                            <div class="invaild">
                                                <div class="invalid-feedback">
                                                    <span asp-validation-for="@Model.CrMasSupRenterDrivingLicenseEnName" id="RenterDrivingLicenseNameEn-Error" class="text-danger"></span>
                                                    @Html.ValidationMessage("ExistEn", null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="rental-system-number" class="form-label">@localizer["RentalSystemNo"]</label>
                                            <input type="text" class="form-control inputs number-input" asp-for="CrMasSupRenterDrivingLicenseNaqlCode" id="RenterDrivingLicenseNaqlCode" maxlength="10" onchange="Check_onChange_input('ExistCode',document.getElementById('RenterDrivingLicenseNaqlCode').value)" oninput="validateNumberLength(this)">
                                            <div class="invaild">
                                                <div class="invalid-feedback">
                                                    <span asp-validation-for="@Model.CrMasSupRenterDrivingLicenseNaqlCode" id="RenterDrivingLicenseNaqlCode-Error" class="text-danger"></span>
                                                    @Html.ValidationMessage("ExistCode", null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="rental-system-pin" class="form-label">@localizer["RentalSystemCode"]</label>
                                            <input type="text" class="form-control number-input inputs" asp-for="CrMasSupRenterDrivingLicenseNaqlId" id="RenterDrivingLicenseNaqlId" maxlength="10" onchange="Check_onChange_input('ExistId',document.getElementById('RenterDrivingLicenseNaqlId').value)" oninput="validateNumberLength(this)">
                                            <div class="invaild">
                                                <div class="invalid-feedback">
                                                    <span asp-validation-for="@Model.CrMasSupRenterDrivingLicenseNaqlId" id="RenterDrivingLicenseNaqlId-Error" class="text-danger"></span>
                                                    @Html.ValidationMessage("ExistId", null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row ">
                                        <div class="col-lg-12">
                                            <label>@localizer["reasons"]</label>
                                            <textarea class="form-control textarea-inputs" asp-for="CrMasSupRenterDrivingLicenseReasons" rows="1" maxlength="100" type="text"></textarea>
                                            <div class="invaild">
                                                <div class="invalid-feedback">
                                                    <span asp-validation-for="@Model.CrMasSupRenterDrivingLicenseReasons" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        function Check_onChange_input(Exist_lang, dataField) {
            $.ajax({
                type: "GET",
                url: "/MAS/RenterDrivingLicense/CheckChangedField",
                data: { Exist_lang: Exist_lang, dataField: dataField },
                success: function (result) {
                    console.log("feedback", result);
                    // Hide all previous error messages
                    $('.invalid-feedback').hide();

                    // Show new error messages if they exist
                    if (result.errors && result.errors.length > 0) {
                        result.errors.forEach(function (error) {
                            // Use the ID from the error object to find the correct element
                            $(`#${error.field}-Error`).text(error.message).show();
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }


    </script>
}