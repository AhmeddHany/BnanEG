@section scripts {
    <script src="~/js/toastr.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.qrcode/1.0/jquery.qrcode.min.js"></script>
    <script>
        $(document).ready(async () => {
            // استدعاء دالة التحقق عند تحميل الصفحة
            await checkClientConnection();
        });

        let qrTimer; // لتخزين المؤقت
        const companyId = "4016"; // استبدل بـ ID الخاص بالشركة

        // دالة لتحميل QR Code
        async function fetchQrCode() {
            // أولاً تحقق من اتصال العميل
            const isConnected = await checkClientConnection(true);  // تمرير true للتأكد من الاتصال فقط

            if (isConnected) {
                // إذا كان العميل متصل، عرض رسالة الاتصال ووقف العملية
                return;
            }

            // إذا كان غير متصل، استمر في توليد رمز QR
            const url = `/MAS/TechnicalConnectivity/GenerateQrCode?companyId=${companyId}`;

            // إنشاء AbortController
            const controller = new AbortController();
            const timeoutId = setTimeout(() => controller.abort(), 60000); // تعيين timeout بـ 60 ثانية

            try {
                // تفريغ محتوى منطقة QR وإظهار الـ Loader
                $('#QRArea').empty();
                $('#QRArea').append('<span class="loader"></span>'); // عرض مؤشر تحميل

                // إرسال طلب GET لتحميل QR Code مع التحكم في إلغاء الطلب عبر AbortController
                const response = await fetch(url, {
                    method: 'GET',
                    signal: controller.signal, // إضافة signal للتحكم في إلغاء الطلب
                });

                // إلغاء التايم أوت بعد الاستجابة
                clearTimeout(timeoutId);

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                // استخراج بيانات الـ QR Code
                const data = await response.json();
                console.log("dataQr", data);
                const qr = data.response.qr;

                // عرض QR Code في المنطقة
                $('#QRArea').empty();
                $("#data-check-whatsup").css("background-color", "#666666");
                $('#QRArea').append(`
                    <div class="col-auto d-flex flex-column justify-content-center align-items-center">
                        <div id="QRCode"></div>
                        <br>
                        <p><img src="/MasSystem/images/Frame 2608853.svg"> مسح الرمز</p>
                    </div>
                `);
                // إضافة QR Code مع تحديد الحجم (عرض وارتفاع)
                $('#QRCode').qrcode(qr);

                // تشغيل المؤقت لمدة 30 ثانية لتوليد QR جديد بعد 30 ثانية
                resetTimer();
            } catch (error) {
                // عرض رسالة خطأ في حالة الفشل
                console.error("Error fetching QR Code:", error);
                $('#QRArea').empty();
                $("#data-check-whatsup").css("background-color", "#666666");

                // التحقق إذا كان الخطأ بسبب timeout
                if (error.name === 'AbortError') {
                    $('#QRArea').append(`
                        <p>حدث تأخير في الاتصال. الرجاء المحاولة مرة أخرى.</p>
                        <button class="border-0 bg-transparent" id="RegenerateQR" onclick="fetchQrCode()">
                            <img id="qrImg" src="/MasSystem/images/qrcode 1.svg" alt="Generate QR">
                        </button>
                    `);
                } else if (error.message.includes("HTTP error")) {
                    $('#QRArea').append(`
                        <p>حدث خطأ أثناء تحميل رمز الـ QR. حالة الاتصال بالخادم غير مستقرة.</p>
                        <button class="border-0 bg-transparent" id="RegenerateQR" onclick="fetchQrCode()">
                            <img id="qrImg" src="/MasSystem/images/qrcode 1.svg" alt="Generate QR">
                        </button>
                    `);
                } else {
                    $('#QRArea').append(`
                        <p>حدث خطأ في الشبكة. تأكد من اتصال الإنترنت الخاص بك.</p>
                        <button class="border-0 bg-transparent" id="RegenerateQR" onclick="fetchQrCode()">
                            <img id="qrImg" src="/MasSystem/images/qrcode 1.svg" alt="Generate QR">
                        </button>
                    `);
                }
            }
        }

        // دالة لإعادة ضبط المؤقت
        function resetTimer() {
            // إيقاف أي مؤقت قيد التشغيل
            if (qrTimer) {
                clearTimeout(qrTimer);
            }

            // ضبط مؤقت لمدة 30 ثانية
            qrTimer = setTimeout(() => {
                // عند انتهاء المؤقت، يتم إخفاء QR Code وإظهار الرسالة
                $('#QRArea').empty();
                $("#data-check-whatsup").css("background-color", "#666666");
                $('#QRArea').append(`
                            <div class="col-auto d-flex gap-4 flex-column justify-content-center align-items-center"
                                style="cursor:pointer;" id="ExpiredQRMessage" onclick="fetchQrCode()">
                                <img src="/MasSystem/images/NotScannedQR.svg" alt="Expired QR">
                                <p>انتهت صلاحية الرمز اضغط لإعادة التحميل</p>
                            </div>
                        `);
            }, 30000); // 30 ثانية
        }
        async function checkClientConnection(returnOnlyStatus = false) {
            const url = `/MAS/TechnicalConnectivity/IsClientReady?companyId=${companyId}`;

            try {
                // عرض مؤشر تحميل مؤقت أثناء الاتصال بالـ API
                $('#QRArea').empty();
                $('#QRArea').append('<span class="loader"></span>');

                // إنشاء AbortController
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 30000); // تعيين timeout بـ 30 ثانية

                // إرسال طلب GET لتحميل QR Code مع التحكم في إلغاء الطلب عبر AbortController
                const response = await fetch(url, {
                    method: 'GET',
                    signal: controller.signal, // إضافة signal للتحكم في إلغاء الطلب
                });

                // إلغاء التايم أوت بعد الاستجابة
                clearTimeout(timeoutId);

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                // معالجة الاستجابة
                const data = await response.json();

                if (data.status && data.data) {  // إذا كان الاتصال ناجحًا
                    const { name, mobile, deviceType } = data.data;
                    $("#data-check-whatsup").css("background-color", "green");
                    $('#QRArea').empty();
                    $('#QRArea').append(`
                        <div class="col-auto d-flex gap-2 flex-column justify-content-center align-items-center">
                            <img src="/MasSystem/images/done.svg" style="width: 50px;">
                            <p>أنت متصل بالواتساب</p>
                            <button class="btn cut-connect-btn" type="button" onclick="logoutClient()">قطع الاتصال</button>
                        </div>
                    `);
                    $("#DeviceName-whatsapp").val(name);
                    $("#DeviceNameType-whatsapp").val(deviceType);
                    $("#phone2").val(mobile);

                    // إذا تم تمرير true، نعيد الحالة فقط
                    if (returnOnlyStatus) {
                        return true;
                    }
                } else {
                    // إذا لم يكن متصل، عرض زر "إعادة التحميل"
                    $("#data-check-whatsup").css("background-color", "#666666");
                    $('#QRArea').empty();
                    $('#QRArea').append(`
                        <button class="border-0 bg-transparent" id="RegenerateQR" onclick="fetchQrCode()">
                            <img id="qrImg" src="/MasSystem/images/qrcode 1.svg" alt="Generate QR">
                        </button>
                    `);

                    if (returnOnlyStatus) {
                        return false;
                    }
                }
            } catch (error) {
                // معالجة الأخطاء
                console.error("Error checking client connection:", error);
                $("#data-check-whatsup").css("background-color", "#666666");
                $('#QRArea').empty();
                $('#QRArea').append(`
                    <button class="border-0 bg-transparent" id="RegenerateQR" onclick="fetchQrCode()">
                        <img id="qrImg" src="/MasSystem/images/qrcode 1.svg" alt="Generate QR">
                    </button>
                `);

                if (error.name === 'AbortError') {
                    $('#QRArea').append('<p>حدث تأخير في الاتصال. الرجاء المحاولة مرة أخرى.</p>');
                } else if (error.message.includes("HTTP error")) {
                    $('#QRArea').append('<p>حدث خطأ في الخادم. تأكد من أن الخادم يعمل بشكل صحيح.</p>');
                } else {
                    $('#QRArea').append('<p>حدث خطأ في الشبكة. تأكد من اتصال الإنترنت الخاص بك.</p>');
                }
            }
        }
        // دالة لقطع الاتصال باستخدام fetch (async/await)
        async function logoutClient() {
            const url = "/MAS/TechnicalConnectivity/LogoutClient";
            const data = { select_Connect_id: companyId };

            try {
                const response = await fetch(url + `?select_Connect_id=${data.select_Connect_id}`, {
                    method: "GET",  // نوع الطلب
                    headers: {
                        "Content-Type": "application/json"
                    }
                });

                // التحقق من حالة الاستجابة
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();

                if (result.status) {
                    $('#QRArea').empty();
                    $('#QRArea').append('<span class="loader"></span>');  // عرض Loader أثناء الانتظار
                    setTimeout(() => {
                        $("#DeviceName-whatsup").val("");
                        $("#DeviceNameType-whatsup").val("");
                        $("#phone2").val("");
                        // عرض رسالة النجاح بعد 45 ثانية
                        handleSuccess(result.message || "تم قطع الاتصال بنجاح");
                    }, 45000); // تأخير 45 ثانية
                } else {
                    // في حالة فشل عملية قطع الاتصال
                    handleFailure(result.message || "فشل في قطع الاتصال");
                }
            } catch (error) {
                // في حالة حدوث خطأ أثناء الاتصال
                handleFailure("حدث خطأ أثناء قطع الاتصال. حاول مجددًا.");
                console.error("Error during logout:", error);
            }
        }
        // دالة لعرض الرسالة عند النجاح
        function handleSuccess(message) {
            $("#data-check-whatsup").css("background-color", "#666666");
            $('#QRArea').empty();
            $('#QRArea').append(`
                    <button class="border-0 bg-transparent" id="RegenerateQR" onclick="fetchQrCode()">
                        <img id="qrImg" src="/MasSystem/images/qrcode 1.svg" alt="Generate QR">
                    </button>
                    <p>${message}</p>

                `);
        }

        // دالة لعرض الرسالة عند الفشل
        function handleFailure(message) {
            $('#QRArea').empty();
            $('#QRArea').append(`
                        <div class="col-auto d-flex gap-2 flex-column justify-content-center align-items-center">
                            <img src="/MasSystem/images/done.svg" style="width: 50px;">
                            <p>أنت متصل بالواتساب</p>
                            <button class="btn cut-connect-btn" type="button" onclick="logoutClient()">قطع الاتصال</button>
                        </div>
                        <p>${message}</p>
                    `);
        }


    </script>
